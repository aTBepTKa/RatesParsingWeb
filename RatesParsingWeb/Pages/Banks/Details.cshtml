@page
@model RatesParsingWeb.Pages.Banks.DetailsModel
@using RatesParsingWeb.App_Code
 
@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Реквизиты банка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.SwiftCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankModel.SwiftCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.BankUrl)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.BankModel.BankUrl" target="_blank">@Model.BankModel.BankUrl</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.Currency.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankModel.Currency.TextCode) (@Html.DisplayFor(model => model.BankModel.Currency.Name))
        </dd>
    </dl>
</div>
<div>
    @if (Model.BankModel.ParsingSettings != null)
    {
        <h4>Основные параметры парсинга</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.RatesUrl)
            </dt>
            <dd class="col-sm-10">
                <a href="@Model.BankModel.ParsingSettings.RatesUrl" target="_blank">@Model.BankModel.ParsingSettings.RatesUrl</a>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.TextCodeXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.TextCodeXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.ExchangeRateXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.ExchangeRateXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.UnitXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.UnitXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.VariablePartOfXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.VariablePartOfXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.StartXpathRow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.StartXpathRow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.EndXpathRow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.EndXpathRow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.NumberDecimalSeparator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.NumberDecimalSeparator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BankModel.ParsingSettings.NumberGroupSeparator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BankModel.ParsingSettings.NumberGroupSeparator)
            </dd>
        </dl>
        <h4>Параметры обработки строк</h4>
        <hr />
        <div class="form-group col-md">
            <h5>Команды обработки текстового кода валюты</h5>
            @await Html.PartialAsync("_CommandsTableDetails", Model.TextCodeCommands)
            <h5>Команды обработки единицы измерения валюты</h5>
            @await Html.PartialAsync("_CommandsTableDetails", Model.UnitCommands)
            <h5>Команды обработки курса валюты</h5>
            @await Html.PartialAsync("_CommandsTableDetails", Model.ExchangeRateCommands)
        </div>
    }
    else
    {
        <h4>Настройки парсинга отсутствуют</h4>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BankModel.Id">Редактировать</a> |
    <a asp-page="./Index">К списку банков</a> |
    <a asp-page="/Index">На главную</a>
</div>
