@page
@model RatesParsingWeb.CreateModel
@using RatesParsingWeb.App_Code;
@{
    ViewData["Title"] = "Создать команду";
}

<h1>Создать команду</h1>
<hr />
@if (Model.ValidationErrors != null)
{
    <div class="text-danger">Ошибки при обновлении данных:</div>
    @Html.CreteErrorList(Model.ValidationErrors);
}
<form method="post">
    <div class="row">
        <h4>Наименование команды</h4>
        <div class="form-group col">
            <label asp-for="CommandModel.Name" class="control-label"></label>
            <input asp-for="CommandModel.Name" class="form-control" />
            <span asp-validation-for="CommandModel.Name" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="CommandModel.FullName" class="control-label"></label>
            <input asp-for="CommandModel.FullName" class="form-control" />
            <span asp-validation-for="CommandModel.FullName" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group col">
            <label asp-for="CommandModel.Description" class="control-label"></label>
            <input asp-for="CommandModel.Description" class="form-control" />
            <span asp-validation-for="CommandModel.Description" class="text-danger"></span>
        </div>
        <div class="w-100"></div>

        <h4>Параметры скрипта</h4>
        <button id="btnAddParameter">Добавить параметр</button>
        <div id="parameters"></div>

        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}