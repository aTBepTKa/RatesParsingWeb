@page
@model RatesParsingWeb.Pages.Banks.DetailsModel

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Банк</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.BankUrl)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.BankModel.BankUrl">@Model.BankModel.BankUrl</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.RatesUrl)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.BankModel.RatesUrl">@Model.BankModel.RatesUrl</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankModel.CurrencyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankModel.CurrencyTextCode) (@Html.DisplayFor(model => model.BankModel.CurrencyName))
        </dd>
    </dl>
</div>
<div>
    @if (Model.ParsingSettingsModel != null)
    {
        <h4>Настройки парсинга</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.TextCodeXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.TextCodeXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.ExchangeRateXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.ExchangeRateXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.UnitXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.UnitXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.VariablePartOfXpath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.VariablePartOfXpath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.StartXpathRow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.StartXpathRow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.EndXpathRow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.EndXpathRow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.NumberDecimalSeparator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.NumberDecimalSeparator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParsingSettingsModel.NumberGroupSeparator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParsingSettingsModel.NumberGroupSeparator)
            </dd>
        </dl>
    }
    else
    {
        <h4>Настройки парсинга отсутствуют</h4>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BankModel.Id">Редактировать</a> |
    <a asp-page="./Index">Вернуться к списку банков</a>
</div>
