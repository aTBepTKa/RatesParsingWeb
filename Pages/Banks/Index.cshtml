@page
@model IndexModel

@{
    ViewData["Title"] = "Список банков";
}

<h1>Список банков</h1>

<p>
    <a asp-page="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstBankObject.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstBankObject.RatesUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstBankObject.CurrencyModel.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BanksModelList)
        {
            <tr>
                <td>
                    <a href="@item.BankUrl" target="_blank">@item.Name</a>
                </td>
                <td>
                    <a href="@item.RatesUrl" target="_blank">Курсы</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyModel.TextCode) (@Html.DisplayFor(modelItem => item.CurrencyModel.Name))
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
